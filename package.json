{
  "name": "appliedbusinessproject",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap-cloud-sdk/core": "^1.54.2",
    "@sap-cloud-sdk/http-client": "^3.23.0",
    "@sap/cds": "^8",
    "express": "^4",
    "@sap/xssec": "^4"
  },
  "devDependencies": {
    "@cap-js/cds-types": "^0.6",
    "@cap-js/sqlite": "^1",
    "@sap/cds-dk": "^8",
    "@sap/ux-specification": "UI5-1.120"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-expense-creation": "cds watch --open expense-creation/webapp/index.html?sap-ui-xx-viewCache=false",
    "watch-expensemanagement": "cds watch --open expensemanagement/webapp/index.html?sap-ui-xx-viewCache=false"
  },
  "cds": {
    "requires": {
      "API_EXPENSE_SERVICE": {
        "kind": "odata",
        "model": "srv/expenseservice",
        "credentials": {
          "destination": "MySAPSystem"
        }
      },
      "destinations": true,
      "html5-repo": true,
      "workzone": true,
      "[production]": {
        "auth": "xsuaa"
      }
    },
    "data": {
      "db": "./data"
    }
  },
  "sapux": [
    "app/expensemanagement"
  ]
}
