<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
>
    <core:Title
        id="_IDGenTitle3"
        text="Expense: Algemene Informatie"
    />
    <Label
        id="_IDGenLabel"
        text="Projectnaam"
    />
    <Input
        id="_IDGenInput"
        value="{expenseModel>/project_name}"
        required="true"
    />

    <Label
        id="_IDGenLabel1"
        text="Projectleider"
    />
    <Input
        id="_IDGenInput1"
        value="{expenseModel>/project_leader}"
        required="true"
    />

    <Label
        id="_IDGenLabel2"
        text="Startdatum"
    />
    <DatePicker
        id="_IDGenDatePicker"
        value="{expenseModel>/start_date}"
        required="true"
    />

    <Label text="Categorie" />
    <Select
        items="{categoriesModel>/Categories}"
        selectedKey="{expenseModel>/category}"
    >
        <core:Item
            key="{categoriesModel>name}"
            text="{categoriesModel>name}"
        />
    </Select>

    <Label text="Financieringstype" />
    <Select
        items="{financingTypesModel>/FinancingTypes}"
        selectedKey="{expenseModel>/financing_type}"
    >
        <core:Item
            key="{financingTypesModel>name}"
            text="{financingTypesModel>name}"
        />
    </Select>

    <Label
        id="_IDGenLabel5"
        text="Aantal maanden van uitvoering"
    />
    <Input
        id="_IDGenInput2"
        value="{expenseModel>/execution_months}"
        required="true"
        type="Number"
    />

    <Label
        id="_IDGenLabel21"
        text="Bedrag van de expense (â‚¬)"
    />
    <Input
        id="_IDGenInput9"
        value="{expenseModel>/expense_amount}"
        type="Number"
        required="true"
    />
</core:FragmentDefinition>
